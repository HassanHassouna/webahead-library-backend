{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "camelcase": "off",
    "semi": [
      2,
      "always"
    ],
    "indent": [
      4,
      "warn"
    ],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }]
  }
}